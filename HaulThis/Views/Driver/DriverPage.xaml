<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaulThis.Views.Driver.DriverPage"
             Title="DriverPage">
    <VerticalStackLayout>
        <Label
            Text="Welcome to Driver Page!"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

        <Button
            x:Name="ManageTrips"
            Text="Manage Trips"
            SemanticProperties.Hint="Opens Manage Trip page"
            Clicked="ManageTrips_Clicked"
            HorizontalOptions="Fill"/>

        <Button
            x:Name="RecordExpenses"
            Text="Manage Expenses"
            SemanticProperties.Hint="Opens Manage expenses page"
            Clicked="RecordExpenses_Clicked"
            HorizontalOptions="Fill"/>

        <Button
            x:Name="DriverConfirmPickup"
            Text="Confirm Pickup/Delivery"
            SemanticProperties.Hint="Opens Confirm Pickup page"
            Clicked="DriverConfirmPickup_Clicked"
            HorizontalOptions="Fill"/>

        <Button
            x:Name="ReportDelays"
            Text="Report Delays"
            SemanticProperties.Hint="Opens Report Delays page"
            Clicked="ReportDelays_Clicked"
            HorizontalOptions="Fill"/>

    </VerticalStackLayout>
</ContentPage>