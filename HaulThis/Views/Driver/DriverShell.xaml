<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HaulThis.Views.Driver.DriverShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HaulThis.Views.Driver"
    Title="Driver"
    FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Confirm Pickup" ContentTemplate="{DataTemplate local:DriverConfirmPickup}" />
        <ShellContent Title="Manage Trips" ContentTemplate="{DataTemplate local:ManageTrips}" />
        <ShellContent Title="Report Delays And Emergencies" ContentTemplate="{DataTemplate local:ReportDelaysAndEmergencies}" />
    </FlyoutItem>

</Shell>
