<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
        x:Class="HaulThis.Views.Misc.ReportEmergencyOrDelayPopup">

    <Grid>
        <StackLayout Margin="10">
            <TextBlock Text="Trip ID:"/>
            <TextBox x:Name="TripIdEntry" Width="350" Margin="0,0,0,10" />

            <TextBlock Text="Report Type:"/>
            <TextBox x:Name="ReportTypeEntry" Width="350" Margin="0,0,0,10" />

            <TextBlock Text="Description:"/>
            <TextBox x:Name="DescriptionEntry" Width="350" Height="100" Margin="0,0,0,10" TextWrapping="Wrap" AcceptsReturn="True" />

            <Button Text="Save" BackgroundColor="Green" TextColor="White" Clicked="OnSubmitButtonClicked"/>
            <Button Content="Close" Width="75" Click="OnCloseButtonClicked"/>
        </StackLayout>
    </Grid>
</toolkit:Popup>
