<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HaulThis.Views.Misc.EditCustomerPopup">

    <StackLayout>
        <Entry x:Name="FirstNameEntry" Placeholder="First Name"/>
        <Entry x:Name="LastNameEntry" Placeholder="Last Name"/>
        <Entry x:Name="EmailEntry" Placeholder="Email"/>
        <Entry x:Name="PhoneEntry" Placeholder="Phone Number"/>
        <Entry x:Name="AddressEntry" Placeholder="Address"/>
        <Entry x:Name="CityEntry" Placeholder="City"/>
        <Entry x:Name="PostalCodeEntry" Placeholder="Postal Code"/>
        <Entry x:Name="CountryEntry" Placeholder="Country"/>
        <Switch x:Name="IsActiveSwitch" />
        <Button Text="Save" Clicked="OnSaveButtonClicked"/>
        <Button Text="Close" Clicked="OnCloseButtonClicked"/>
    </StackLayout>
</toolkit:Popup>
